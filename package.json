{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test --concurrency=1 --stream",
    "coverage": "lerna run coverage --concurrency=1 --stream",
    "clean": "rm -rf dist && rm -rf .build",
    "clean-modules": "rm -rf node_modules && lerna exec -- rm -rf ./node_modules",
    "lint": "lerna run lint",
    "docs": "lerna run docs"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.1.2"
  }
}